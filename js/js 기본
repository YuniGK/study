/*
let name = user.name;
let age = user.age;
와 동일하다.
*/
let user = {name : "mike", age : 30};
let {name , age} = user;
console.log(name); //'mike'

let {name: userName , age: userAge} = user;
console.log(userName); //'mike'
 
